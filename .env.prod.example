# Production Environment Variables Template
# Copy this file to .env.prod and fill in the actual values
# DO NOT commit the actual .env.prod file to version control

# Django Core Settings
SECRET_KEY=your-super-secret-key-here-generate-a-new-one
DEBUG=False
DJANGO_SETTINGS_MODULE=kastoma_backend.settings.prod
ENVIRONMENT=production

# Security
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
USE_HTTPS=True

# Database Configuration
DB_ENGINE=django.db.backends.mysql
DB_NAME=kastoma_prod
DB_USER=kastoma_user
DB_PASSWORD=secure-database-password
DB_HOST=db
DB_PORT=3306
DB_ROOT_PASSWORD=secure-root-password

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# AWS S3 Configuration (Optional)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Error Reporting (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# JWT Token Settings
JWT_ACCESS_TOKEN_LIFETIME=15  # minutes
JWT_REFRESH_TOKEN_LIFETIME=7  # days

# Logging
LOG_LEVEL=INFO